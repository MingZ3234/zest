<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<Zest xmlns="https://www.bookong.net/schema/zest/data" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="https://www.bookong.net/schema/zest/data file://zest-data-1.0.xsd">
    <Description>test case description</Description>
    <Sources>
        <Source Id="mongo">
            <Init/>
            <Verify>
                <Collection Name="tab" EntityClass="com.github.bookong.zest.testcase.param.Param">
                    <Data>
                        <Rules>
                            <Rule Path="obj.str">
                                <RegExp>^[0-9]*$</RegExp>
                            </Rule>
                            <Rule Path="date1">
                                <CurrentTime/>
                            </Rule>
                            <Rule Path="date2">
                                <FromCurrentTime Min="1" Max="2" Unit="day" />
                            </Rule>
                        </Rules>
                        <Value/>
                    </Data>
                </Collection>
            </Verify>
        </Source>
    </Sources>
    <Param/>
</Zest>