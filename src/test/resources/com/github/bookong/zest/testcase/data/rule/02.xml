<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<Zest xmlns="https://www.bookong.net/schema/zest/data" >
    <Description>test case description</Description>
    <Sources>
        <Source Id="mongo">
            <Init/>
            <Verify>
                <Collection Name="tab" EntityClass="com.github.bookong.zest.testcase.param.Param">
                    <Rules>
                        <Rule Field="obj.str">
                            <RegExp>^[0-9]*$</RegExp>
                        </Rule>
                        <Rule Field="date1">
                            <CurrentTime/>
                        </Rule>
                        <Rule Field="date2">
                            <FromCurrentTime Min="1" Max="2" Unit="day" />
                        </Rule>
                    </Rules>
                </Collection>
            </Verify>
        </Source>
    </Sources>
    <Param/>
</Zest>