<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<Zest xmlns="https://www.bookong.net/schema/zest/data" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="https://www.bookong.net/schema/zest/data file://zest-data-1.0.xsd">
    <Description>test case description</Description>
    <Sources>
        <Source Id="mysql">
            <Init/>
            <Verify>
                <Table Name="tab">
                    <Rules>
                        <Rule Path="f_varchar">
                            <RegExp>^[0-9]*$</RegExp>
                        </Rule>
                        <Rule Path="f_time">
                            <CurrentTime/>
                        </Rule>
                        <Rule Path="f_date">
                            <FromCurrentTime Min="1" Max="2" Unit="day" />
                        </Rule>
                    </Rules>
                </Table>
            </Verify>
        </Source>
    </Sources>
    <Param/>
</Zest>